<div class="container con-form1">
    <div class="d-flex justify-content-center h-100">
        <div class="card  shadow" style="width: 100%;">
            <div class="card-header">
                <div class="float-left">
                    <h1></i> Profile</h1>
                </div>
            </div>
            <div class="card-body">
                <h4>Ảnh đại diện</h4>
                <hr>
                <div style="text-align: center;">
                    <img src="/avatar/<%=account.avatar%>" class="circular--landscape img-thumbnail" id="avatar" alt="avatar" width="50%" style="border-radius: 50%;">
                   <hr>
                   <div class="form">
                        <form action="/profile-avatar" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="<%=user._id %>" />
                            <input type="file" name="avatar" id="file" >
                            <button class="btn btn-primary btn-block mt-4">
                                Update avatar
                            </button>
                        </form>
                   </div>
                </div>
                <div>
                    <hr>
                    <h4>Thông tin</h4>
                    <hr>
                   <div class="form">
                       <form action="/profile-update" method="POST">
                            <input type="hidden" name="id" value="<%=user._id %>" />
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input class="form-control" type="email" name="email" value="<%=account.email %>">
                            </div>
                            <div class="form-group">
                                <label for="username">Tên tài khoản</label>
                                <input class="form-control" type="text"  name="username" id="username" value="<%=account.username %>">
                            </div>
                            <div class="form-group">
                                <label for="phone">Số điện thoại</label>
                                <input class="form-control" type="text" name="phone" id="phone" value="<%=account.phone %>">
                            </div>
                            <button class="btn btn-primary btn-block mt-4">Update Profile</button>
                        </form>
                   </div>
                </div>
            </div>     
        </div>
    </div>
</div>
<script>
    document.getElementById("file").onchange = function() {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById("avatar").src = e.target.result;
        }
        reader.readAsDataURL(this.files[0]);
    }
</script>