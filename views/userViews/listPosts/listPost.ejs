<% public.forEach(pu => { if(pu.status == true){ %>
<div class="d-flex justify-content-center h-100 w-100">
  <div class="card shadow" style="width: 100%;">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex justify-content-between align-items-center">
          <div class="mr-2">
            <img
              class="avatar"
              width="45"
              src="/avatar/<%= pu.owner[0].avatar %>"
              alt=""
            />
          </div>
          <div class="ml-2">
            <div class="h5 m-0">@<%= pu.owner[0].username %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="text-muted h7 mb-2">
        <i class="fa fa-clock-o"></i> <%= pu.date%>
      </div>
      <p class="card-text">
        <%= pu.content %>
      </p>
      <!---->
      <% if(pu.image != 'none') {%> <% var image = pu.image; %> <% for (var ima
      of image){ %>

      <p><img src="/uploads/<%= ima %>" width="50%" /></p>
      <% } %> <% } %>
      <!---->
    </div>
    <div class="card-footer">
      <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
      <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
      <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
    </div>
  </div>
</div>
<%} }) %>
