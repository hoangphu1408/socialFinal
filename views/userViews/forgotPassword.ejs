            <h1>Quên mật khẩu!</h1>
        </div>
        <form action="/forgot-password" method="POST">
            <%-include("../partials/messages.ejs") %>
            <div class="panel-footer" style="max-width: 500px;">
                <i class="design"></i>
                <label for="txtname"> Email: </label>
                <input class="form-control text-center" id="email" name="email" type="email" required autofocus>
                </br>
                <button class="btn btn-primary btn-lg btn-block" type="submit"> Gửi </button>
                </br>
            </div>
        </form>
    </div>
</div>