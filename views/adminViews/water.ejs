<div class="container con-form">
  <div class="d-flex justify-content-center h-100">
    <div class="card card-body shadow card-bg text-white">
      <div class="head">
        <h1><i class="fas fa-user-shield"></i> Thông báo tiền nước</h1>
      </div>
      <%- include("../partials/messages") %>
      <div class="form">
        <form action="/admin/water-bill-manage" method="POST">
          <div class="form-group">
            <label for="idFlat">Căn hộ</label>
            <select class="form-control" name="idFlat" id="idFlat">
              <% flat.forEach(f => { %>
              <option value="<%= f._id %>"
                ><%=f.block%>-<%=f.floorId%>-<%=f.flatId%></option
              >
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="last_read">Chỉ số cũ</label>
            <input
              class="form-control"
              type="number"
              name="last_read"
              id="last_read"
              min="1"
            />
          </div>
          <div class="form-group">
            <label for="current_read">Chỉ số mới</label>
            <input
              class="form-control"
              type="number"
              name="current_read"
              id="current_read"
              min="1"
            />
          </div>
          <button class="btn btn-success btn-block">
            Gửi
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<hr />
<%-include("./listsData/listWater.ejs") %>
