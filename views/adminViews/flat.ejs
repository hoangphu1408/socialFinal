<div class="container con-form">
  <div class="d-flex justify-content-center h-100">
    <div class="card card-body shadow">
      <div class="head">
        <h1><i class="fas fa-user-shield"></i> Create Flat</h1>
      </div>
      <%- include("../partials/messages") %>
      <div class="form">
        <form action="/admin/flat-manage" method="POST">
          <div class="form-group">
            <label for="blockOfFlat">Block</label>
            <select class="form-control" name="blockOfFlat" id="blockOfFlat">
              <option selected value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
            </select>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="floorId">Floor</label>
              <select class="form-control" name="floorId" id="floorId">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="flatNumber">Flat Number</label>
              <select class="form-control" name="flatNumber" id="flatNumber">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="owner">Owner</label>
            <select class="form-control" name="owner" id="owner">
              <% resident.forEach(res => { %>
              <option value="<%= res._id%>"><%= res.full_name%></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="number">Number</label>
            <select class="form-control" name="number" id="number">
              <option value="1">1</option>
              <option value="2">2</option>
            </select>
          </div>
          <div class="form-group number"></div>
          <div class="form-group" id="people"></div>
          <button class="btn btn-primary btn-block">Create</button>
        </form>
      </div>
    </div>
  </div>
</div>
<hr />
<script>
  $("#number").change(function () {});
</script>
