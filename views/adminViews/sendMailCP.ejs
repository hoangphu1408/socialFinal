<div class="container con-form">
  <div class="d-flex justify-content-center h-100">
    <div class="card card-body shadow">
      <div class="head">
        <h1><i class="fas fa-user-shield"></i> Send Mail Verify</h1>
      </div>
      <div class="form">
        <form method="POST">
          <input
            type="hidden"
            name="email"
            id="email"
            value="<%=user.email %>"
          />
          <button class="btn btn-primary btn-block" type="submit" id="submit">
            Send
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<hr />
