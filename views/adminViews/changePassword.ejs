<div class="container con-form" style="width: 500px;">
    <div class="d-flex justify-content-center h-100">
        <div class="card card-body shadow text-white card-bg" style="background-color: rgba(0, 0, 0, 0.53);">
            <div class="head">
                <h1><i class="fas fa-user-shield"></i> Đổi mật khẩu</h1>
            </div>
            <%- include("../partials/messages") %>
            <div class="form">
                <form action="/admin/change-password" method="POST">
                    <input type="hidden" name="email" value="<%= email %>">
                    <div class="form-group">
                        <label for="password">Mật khẩu mới</label>
                        <input class="form-control" type="password" name="password" id="password" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Nhập lại mật khẩu</label>
                        <input class="form-control" type="password" name="password2" id="password2" />
                    </div>
                    <button class="btn btn-success btn-block">Đổi</button>
                </form>
            </div>
        </div>

    </div>
</div>
</div>