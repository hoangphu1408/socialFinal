<div class="container con-form">
  <div class="d-flex justify-content-center h-100">
    <div class="card card-body shadow card-bg text-white">
      <div class="head">
        <h1><i class="fas fa-user-shield"></i> Tài khoản quản lý</h1>
      </div>
      <%- include("../partials/messages") %>
      <div class="form">
        <form action="/admin/manage" method="POST">
          <div class="form-group">
            <label for="username">Tên tài khoản</label>
            <input
              class="form-control"
              type="text"
              name="username"
              id="username"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" id="email" />
          </div>
          <div class="form-group">
            <label for="passsword">Mật khẩu</label>
            <input
              class="form-control"
              type="password"
              name="password"
              id="password"
            />
          </div>
          <div class="form-group">
            <label for="password2">Nhập lại mất khẩu</label>
            <input
              class="form-control"
              type="password"
              name="password2"
              id="password2"
            />
          </div>
          <button
            class="btn btn-success btn-block"
            data-toggle="modal"
            data-target="#myModal"
          >
            Tạo
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<hr />
