              <td style="text-align: center;">
                <button class="btn btn-secondary">
                  <a style="color: #fff;" href="/admin/flat-delete/<%=fl._id%>"
                    ><i class="far fa-trash-alt"></i
                  ></a>
                </button>
              </td>
            </tr>
            <% } %>
            <!---->
            <% })%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
