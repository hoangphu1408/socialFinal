            %>
            <tr class="table-success">
              <td><b><%=i++; %></b></td>
              <td><%=fl.block%></td>
              <td><%=fl.floorId%></td>
              <td><%=fl.flatId%></td>
              <!---->
              <td><%=fl.Owner[0].full_name %></td>
              <!---->
              <td>
                <% var people = fl.people %> <% people.forEach(peo=>{ %>
                <p><%=peo.full_name%></p>
                <%})%>
              </td>
              <!---->
              <% var date = parseInt(fl.date); var time = new Date(date) %>
              <td>
                <%= time.toLocaleTimeString()+ " " + time.toDateString() %>
              </td>
              <% if(fl.status == true){ %>
              <td>Đã có chủ</td>
              <%}else{ %>
              <td>Chưa có chủ</td>
              <% } %>
